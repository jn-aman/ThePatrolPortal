<%= favicon_link_tag asset_path('policeman.png') %>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<%=stylesheet_link_tag "online"%>


      <div class="container"> 
          <% if notice %>
            <div class="alert alert-info alert-dismissible fade show" role="alert">
              <p class="notice m-0"><%= notice %></p>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>
          <% if alert %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <p class="m-0"><%= alert %></p>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>
        </div> 


      
     <div class="container-fluid full-page">
      <div class="row">
        <div class="col-6 col-md-3 col-lg-2 bg-dark full-page">
          <% if volunteer_signed_in? %>
            <p class="text-white mt-3">Signed in as <%= current_volunteer.name.capitalize %></p>
          <% end %>
          
          <h6 class="text-white my-3">Online Volunteer</h6>
          <div class="left">


            
            <% @users.each do |user| %>
              <% if user.username != current_volunteer.username and user.is_signed_in %>
                <p class="active-user bg-white" data-id="<%= user.id %>">
                  <span class="online-icon d-inline-block bg-success"></span>
                  <span class="username"><%= link_to  user.name.capitalize, shown_path(user.name.capitalize)%>
                    &emsp;


                  
                    <%= user.police_station%>
                  </span>


                </p>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="col-6 col-md-9 col-lg-10 bg-light full-page right py-3">
          <%= link_to 'Back', index1_path, class: 'btn btn-outline-danger d-inline-block float-right' %>
        </div>
      </div>
    </div>