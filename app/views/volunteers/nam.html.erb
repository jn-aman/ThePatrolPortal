<%= favicon_link_tag asset_path('policeman.png') %>

<style>


{
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;

}

 
td,th {
    border: 1px solid #ddd;
    padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2;}

 tr:hover {background-color: #ddd;}

 th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: LightSkyBlue;
    color: white;
}
.tm-btn-white-big1 {
    font-size: 1.5rem;
    color: white;
    background-color: LightSkyBlue;
    padding: 0.5rem 2.5rem;
    border-radius: 0.5rem;
}
</style>
<center>
</style>
 <table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Police Station</th>
    <th>Mobile Number</th>
    <th>Category</th>
  </tr>
 


  <% @v.each do |volunteer| %>
    <tr>
     
      <td><%= volunteer.name %></td>
      <td><%= volunteer.email %></td>
      <td><%= volunteer.police_station %></td>
      <td><%= volunteer.mobile_number %></td>
      <td><%= volunteer.category %></td>
    </tr>
  <% end %>
</table>
<br><br>
<%= link_to 'Back', index1_path,{ :class=>"tm-btn-white-big1" } %>
<% if volunteer_signed_in? %>
            <%= link_to 'Back to Online Volunteers', online_path,{ :class=>"tm-btn-white-big1" } %>
          <% end %>
</center>
